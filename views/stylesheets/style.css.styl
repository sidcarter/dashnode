sansfont()
  font arguments Optima, Calibri, "Helvetica Neue", Helvetica, "Lucida Grande", Arial, sans-serif

serifont()
  font arguments Georgia, serif

border-radius()
  -webkit-border-radius arguments
  -moz-border-radius arguments
  border-radius arguments

body
  color #deefde
  background #211020
  sansfont 0.875em

#page
  width 90%
  margin 0% auto

h1
  display none

.container
  width 50%
  margin 5% auto 1%
  padding 2.17%
  background #543455
  color #eeffee
  border-radius 8px

p
  letter-spacing 0.07em

img
  height 5%
  margin -12.37% 0 0 -12.37% 
  float left
  clear both
  border-radius 5px
  max-width 100%

span.head
  color #347623

span.notFound
  font-weight bold
  color #ddee00

div.status
  font-weight bold
  serifont 2.5em

a
  color #eeeeff
  text-decoration none

a:hover
  color #01c844

.foot
  width 40%
  margin 1% auto
  text-align center
  text-transform lowercase